apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  labels:
    name: rabbitmq
    app: dojot
  name: rabbitmq
  namespace: {{ dojot_namespace }}
spec:
  replicas: 1
  template:
    metadata:
      labels:
        name: rabbitmq
        app: dojot
    spec:
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: dojot.components/group
                operator: In
                values:
                - "core"
      containers:
      - image: dojot/rabbitmq:{{ dojot_rabbitmq_version }}
        name: rabbitmq
      restartPolicy: Always
