apiVersion: k8s.nginx.org/v1alpha1
kind: TransportServer
metadata:
  name: coaps
  namespace: {{ dojot_namespace }}
spec:
  listener:
    name: coaps-udp 
    protocol: UDP 
  upstreams:
  - name: coaps
    service: iotagent-lwm2m
    port: 5684
  upstreamParameters:
    udpRequests: 1
    udpResponses: 1
  action:
    pass: coaps